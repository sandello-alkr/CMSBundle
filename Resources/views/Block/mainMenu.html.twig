{% macro display_tree(page,repo) %}
    <li{% if app.request.get('url')|trim('/') == page.url|trim('/') %} class="active"{% endif %}>
        <a href="{{ path('page_show',{'url':page.path }) }}">{{ page.menuTitle }}</a>
    {% if cms.modules.dropdown_menu %}
    {% set children = repo.children(page,true,'prior') %}
    {% if children|length > 0 and page.lvl == 1 %}
    </li>
    <li><a href="#" class="dropdown-toggle dropdown-caret" data-toggle="dropdown"><b class="caret"></b></a>
        <ul class="dropdown-menu" role="menu"{#  aria-labelledby="drop2" #}>
        {% for child in page.__children  if child.enabled %}
            {{ _self.display_tree(child,repo) }}
        {% endfor %}
        </ul>
    {% endif %}
    {% endif %}
    </li>
{% endmacro %}