{% extends 'CMSBundle:Default:manager.html.twig' %}

{% block body -%}
    <h1>Banner list</h1>

    {% for entity in entities %}
        <div class="row-fluid">
            {{ entity.title }} <a href="{{ path('manager_banner_edit', { 'id': entity.id }) }}">{{ icon('pencil') }}</a>
        </div>
    {% endfor %}

    <br/>
    <a class="btn btn-success" href="{{ path('manager_banner_new') }}">
        Create a new entry
    </a>
    {% endblock %}
