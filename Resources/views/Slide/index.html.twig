{% extends 'CMSBundle:Default:manager.html.twig' %}

{% block body -%}
    <h1>{{'Слайды'|trans}}</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>{{'Заголовок'|trans}}</th>
                <th>{{'Содержание'|trans}}</th>
                <th>{{'Действия'|trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.title }}</td>
                <td>{{ entity.content }}</td>
                <td>
                    <a href="{{ path('manager_slide_edit', { 'id': entity.id }) }}">{{'Редактировать'|trans}}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            <a class="btn btn-primary" href="{{ path('manager_slide_new') }}">
                {{'Создать'|trans}}
            </a>
    {% endblock %}
