{% extends 'CMSBundle:Default:manager.html.twig' %}

{% block body -%}
    <h1>Slide list</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('manager_slide_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.content }}</td>
                <td>
                    <a href="{{ path('manager_slide_edit', { 'id': entity.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('manager_slide_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
