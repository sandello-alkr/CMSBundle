{% extends 'CMSBundle:Default:manager.html.twig' %}

{% block body -%}
    <h1>{{'Список вопросов'|trans}}</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>{{'Вопрос'|trans}}</th>
                <th>{{'Ответ'|trans}}</th>
                <th>{{'Действия'|trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.question }}</td>
                <td>{{ entity.answer }}</td>
                <td>
                    <a href="{{ path('manager_faq_edit', { 'id': entity.id }) }}">{{'редактировать'|trans}}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="row form-group">
        <div class="col-md-10 col-md-push-2">
            <a class="btn btn-primary" href="{{ path('manager_faq_new') }}">
                {{'Создать'|trans}}
            </a>
        </div>
    </div>
    {% endblock %}
