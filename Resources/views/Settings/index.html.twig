{% extends 'CMSBundle:Base:base.html.twig' %}

{% block body -%}
    <h1>Settings list</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Value</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_settings_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.value }}</td>
                <td>
                    <a href="{{ path('admin_settings_edit', { 'id': entity.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_settings_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
