{% extends 'CMSBundle:Default:manager.html.twig' %}

{% block body -%}
    <h1>Page list</h1>
    
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('page_show', { 'url': entity.url }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td><a href="{{ path('page_edit', { 'id': entity.id }) }}">edit</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('page_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
